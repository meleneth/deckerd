= form_for @magic_deck do |f|
  - if @magic_deck.errors.any?
    #error_explanation
      %h2= "#{pluralize(@magic_deck.errors.count, "error")} prohibited this magic_deck from being saved:"
      %ul
        - @magic_deck.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
