= form_for @magic_project do |f|
  - if @magic_project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@magic_project.errors.count, "error")} prohibited this magic_project from being saved:"
      %ul
        - @magic_project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
